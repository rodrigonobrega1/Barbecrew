 <div class="barbecue-title mt-3">
  <div class="row">
    <div class="col-12">
      <h3>My Barbecues</h3>
<br>
            <div class="container">

                <div class="row">
                    <% @user.barbecues.each do |barbecue| %>
                    <div class="col-md-2">
                        <div class="flat-card2">
                        <div class="flat-card-image" style="background-image: url('<%= barbecue.picture.key.present? ? cl_image_path(barbecue.picture.key) : '' %>')"></div>
                        <div class="flat-card-content">
                            <div class="flat-card-title">
                            <h6><%= barbecue.barbecue_model %></h6>
                            </div>
                            <p><%= barbecue.barbecue_description %></p>

                        </div>
                        <div class="flat-card-actions">
                        <div class="btn-group btn-sm" role="group" aria-label="Button group">
                          <%= link_to 'Edit', edit_barbecue_path(barbecue), class: "btn btn-outline-danger btn-sm" %>
                          <%= link_to 'Delete', barbecue_path(barbecue), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-outline-danger btn-sm" %>
                        </div>
                        </div>
                        </div>
                    </div>
                    <% end %>
                </div>
            </div>
<br>
    </div>
  </div>
