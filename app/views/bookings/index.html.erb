<div class="barbecue-title mt-3">
    <div class="row">
        <div class="col-12">
            <h3>My Barbecues bookings</h3>

                <br>

            <div class="container">

                <div class="row">
                    <% @bookings.each do |booking| %>
                    <div class="col-md-2">
                        <div class="flat-card2">
                        <div class="flat-card-image" style="background-image: url('<%= booking.barbecue.picture %>')"></div>
                        <div class="flat-card-content2">
                            <div class="flat-card-title">
                            <h6><%= booking.barbecue.barbecue_model %></h6>
                            <p>Date in: <%= booking.date_in %></p>
                            <p>Date out: <%= booking.date_out %></p>
                        </div>
                        </div>
                    </div>
                </div>
                <% end %>
            </div>
        </div>
    </div>
</div>
