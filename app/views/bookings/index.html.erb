
<h3 class="mt-3 mb-4 text-center">My Barbecue's bookings</h3>

<div class="container">

    <div class="row">
        <% @bookings.each do |booking| %>
            <div class="col-md-2">
                <div class="flat-card3">
                    <div class="flat-card-image" style="background-image: url('<%= booking.barbecue.picture.key.present? ? cl_image_path(booking.barbecue.picture.key) : '' %>')"></div>
                    <div class="flat-card-content2">
                        <div class="flat-card-title">
                            <h6><%= booking.barbecue.barbecue_model %></h6>
                            <p>Date in: <%= booking.date_in %></p>
                            <p>Date out: <%= booking.date_out %></p>
                        </div>
                        <div class="flat-card-actions">
                        <div class="btn-group btn-sm" role="group" aria-label="Button group">
                            <%= link_to 'Delete', booking_path(booking), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-outline-danger btn-sm" %>
                        </div>
                        </div>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>




