<div class="row d-flex justify-content-center">
  <div class="col-4">
    <div class="flat-form2">
      <%= simple_form_for [@barbecue, @booking] do |f| %>
       <div class="flat-form2">
       <%= f.label :Date_in %>
        <%= f.input :date_in, label: false, placeholder: "Date in", :input_html => { class: "form-nice-class" } %>
        </div>
         <div class="flat-form2">
         <%= f.label :Date_out %>
        <%= f.input :date_out, label: false, placeholder: "Date out", :input_html => { class: "form-nice-class" } %>
         <div class="flat-form2">
        <%= f.submit 'Booking the Barbecue', class: 'btn btn-success btn-block w-100 p-2' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
