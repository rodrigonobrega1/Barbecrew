<div class="row justify-content-center">
    <div class="col-4">
    <div class="flat-form2">

        <h2>Log in</h2>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <div class="flat-form2">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email", class: "form-nice-class" } %>
          </div> 

          <div class="flat-form2">
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password", class: "form-nice-class" } %>
          </div>

          <div class="flat-form2">
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Log in", class: "btn btn-primary form-nice-class" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>

    </div>
    </div>
  </div>
