<div>
    <div><%= render 'header' %>
    </div>

<div class="barbecue-title mt-3">
  <div class="row">
    <div class="col-12">
      <h3>Search a barbecue for rent</h3>

            <div class="container">

            <div class="flat-card-map">
                <div class="col-md-12 mt-3">
                    <div style="width: 98%; height: 350px; margin-left: 12px;"
                        data-controller="mapbox"
                        data-mapbox-markers-value="<%= @markers.to_json %>"
                        data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
                    </div>
                </div>
            </div>
                
                <div class="row">
                    <% @barbecues.each do |barbecue| %>
                    <div class="col-md-4">
                        <div class="flat-card">
                        <div class="flat-card-image" style="background-image: url('<%= barbecue.picture.key.present? ? cl_image_path(barbecue.picture.key) : '' %>')"></div>
                        <div class="flat-card-content">
                            <div class="flat-card-title">
                            <h5><%= barbecue.barbecue_model %></h5>
                            </div>
                            <h6><%= barbecue.barbecue_description %></h6>
                            <h6>â‚¬<%= barbecue.barbecue_price %></h6>
                        
                        </div>
                        <div class="flat-card-actions">
                        <div class="btn-group btn-sm" role="group" aria-label="Button group">
                            <%= link_to 'More info', barbecue_path(barbecue), class: "btn btn-outline-dark btn-sm" %>
                        </div>
                        </div>
                        </div>
                    </div>
                    <% end %>

                </div>
            </div>
    </div>
  </div>
</div>
